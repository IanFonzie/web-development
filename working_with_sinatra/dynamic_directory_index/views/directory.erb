<html>
	<head>
		<title><%= @title %></title>
	</head>
	<body>
		<ul>
		<% @files.each do |file| %>
			<li>
				<!-- <a href="<%= file %>"><%= file.split("/").last %></a> -->
				<a href="<%= file %>"><%= file %></a>
			</li>
		<% end %>
		</ul>

		<% if params[:sort] == 'desc' %>
			<a href="/">Sort Ascending</a>
		<% else %>
			<a href="/?sort=desc">Sort Descending</a>
		<% end %>
	</body>
</htm>