<ul>	
	<% @files.each do |file| %>
		<li>
			<a href="/<%= file %>"><%= file %></a> 
			<% unless VALID_IMAGE_TYPES.include?(File.extname(file)) %>
				<a href="/<%= file %>/edit">Edit</a>
				<a href="/<%= file %>/history">History</a>
			<% end %>
			<form class="inline" action="/<%= file %>/delete" method="post">
				<button type="submit">Delete</button>
			</form>
			<form class="inline" action="/<%= file %>/duplicate" method="post">
				<button type="submit">Duplicate</button>
			</form>
		</li>
	<% end %>
</ul>
<a href="/new">New Document</a>
<a href="/new_image">New Image</a>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a> or <a href="/users/signup">Sign Up</a></p>
<% end %>